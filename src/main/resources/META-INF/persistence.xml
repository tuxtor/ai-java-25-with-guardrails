<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="pu" transaction-type="JTA">
        <jta-data-source>ds</jta-data-source>
        <class>com.vorozco.books.Pokemon</class>
        <class>com.vorozco.books.PokemonType</class>
        <class>com.vorozco.books.model.Book</class>
        <class>com.vorozco.books.model.Author</class>
        <class>com.vorozco.books.model.Category</class>
        <class>com.vorozco.books.model.BookAuthor</class>
        <class>com.vorozco.books.model.BookAuthorId</class>
        <class>com.vorozco.books.model.BookCategory</class>
        <class>com.vorozco.books.model.BookCategoryId</class>
        <properties>
            <property name="hibernate.column_ordering_strategy" value="legacy"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
        </properties>
    </persistence-unit>
</persistence>
